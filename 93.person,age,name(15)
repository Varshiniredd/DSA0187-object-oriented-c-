#include <iostream>
#include <string>

class Person {
private:
    std::string name;
    int age;

public:
    
    Person(const std::string& n, int a) : name(n), age(a) {}

    Person(const Person& other) : name(other.name), age(other.age) {}

    std::string getName() const {
        return name;
    }
    int getAge() const {
        return age;
    }
};

int main() {
   
    Person person1("John", 30);

    Person person2 = person1; // Copy constructor called here

  
    std::cout << "Details of person1 - Name: " << person1.getName() << ", Age: " << person1.getAge() << std::endl;
    std::cout << "Details of person2 - Name: " << person2.getName() << ", Age: " << person2.getAge() << std::endl;

    return 0;
}
